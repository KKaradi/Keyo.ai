// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  address String  @unique
  ens     String?
  Guess   Guess[]
}

model Gmail {
  email String  @unique
  Guess Guess[]
}

enum Color {
  green
  yellow
  gray
  empty
}

enum GameStatus {
  new
  started
  finished
}

model Guess {
  id   String   @id @default(cuid())
  time DateTime @default(now())

  letters String[]
  colors  Color[]

  gameId       Int
  imagePath    String
  nextGameDate String
  gameStatus   GameStatus
  prompt       String

  wallet  Wallet? @relation(fields: [address], references: [address], onDelete: Cascade)
  address String?

  gmail Gmail?  @relation(fields: [email], references: [email], onDelete: Cascade)
  email String?
}

// Below is the new proposed schema

model Account {
  id      String      @id @default(cuid())
  type    AccountType
  Session Session[]
}

model Session {
  id            Int       @id @default(autoincrement())
  account       Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId     String
  completed     Boolean
  timeCompleted DateTime
  GuessV2       GuessV2[]
}

model GuessV2 {
  id        String  @id @default(cuid())
  session   Session @relation(fields: [sessionId], references: [id])
  text      String
  sessionId Int
}

enum AccountType {
  google
  wallet
  uid
}
